<% if flash[:notice] %>
  <div class="flash">
<%= flash[:notice] %>
  </div>
<% end %>

<h1>Books</h1>

<table>
<tr>
<th>Title</th>
<th>Body</th>
</tr>

<% @books.each do |book| %>
<!--@books = Book.allなので一覧から順番に繰り返し処理-->
<tr>
<td width="180"><%= book.title %></td>
<td width="360"><%= book.body %></td>
<!--createされた内容をもってきているのでdef createより book=Book.new(book_params) book_paramsにはBookモデルのtitle,bodyを入れるのでbook.title,book.bodyになる-->
<!--|book|にはいっている繰り返しのid-->
<td align="center"><%= link_to "Show" , book_path(book.id) %></td>
<td align="center"><%= link_to "Edit" , edit_book_path(book.id) %></td>
<td align="center"><%= link_to "Destroy" , destroy_book_path(book.id) , method: :'delete' , "data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
</table>

<h1>New book</h1>
<%= form_for(@book) do |f| %>
  <p class = "title">Title</p>
  <div class="field">
    <%= f.text_field :title %>
  </div>
  <p class = "body">Body</p>
  <div class="field">
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>

